<body background="./pages/q123.jpg">
  <header class="banner navbar navbar-inverse navbar-static-top" role="banner">
    <div class="container"  style="background-color:black; width:100%">
      <div class="cta pull-right">
        <%if (sess.email) { %>
          <span class="badge"> Hi <%= sess.userName %> !!</span>
          <a class="btn btn-warning" href="/Logout">Logout</a>
          <% } else{ %>
            <a class="btn btn-warning" href="/SignUplogin">SignUp/Login</a>
        <% } %>
      </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="navigationcta" >

                    <nav class="collapse navbar-left navbar-collapse" role="navigation">

                        <ul id="menu-primary-navigation" class="nav navbar-nav" style="color:black">
                            <li class="active menu-home">
                                <a class="text-primary" href="/">Home</a>
                            </li>
                        </ul>
                        <form class="navbar-form navbar-left" role="search" method="get" action="/searchLost">
                        <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search" name="searchstring">
                        </div>
                        <button type="submit" class="btn btn-warning"><span class="glyphicon glyphicon-search"></span></button>
                        </form>
                    </nav>
                </div>
                <div class="clearfix"></div>

            </div>
      </div>
    </div>


    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    </header>
    <div class="">
      <center>
              <h1 class="text text-warning" style="font-family:Comic Sans MS;"><strong>All Lost Items</strong></h1>
      </center>
    </div>
    <div id="container" style="left: 0px;">
        <section id="content">
          <div id="our-work" >
              <ul>
                  <% for(var i=0; i<lostitem.length; i++) {%>
                <li>
                  <!-- <div class="col-lg-8"> -->
                    <a href='/project-detail?mitesh=<%= lostitem[i]._id %>'> >
                <img src="<%= lostitem[i].imgPath %>" height="359" width="449" alt="LostItemPic">
                    <div class="overlay">
                      <summary>
                        <h2><%= lostitem[i].Itemname %></h2>
                    <h3><%= lostitem[i].ItemDescription %></h3>
                      </summary>
                      <div class="loves">
                        <span>Claim No</span>
                      </div>
                    </div>
                  </a>
                <!-- </div> -->
                </li>
                <% } %>
              </ul>

            </div>
          </section>

